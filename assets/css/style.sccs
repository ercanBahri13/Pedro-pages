---

@import "{{ site.theme }}";

/* TTF fontu tanıt */
@font-face {
  font-family: "PedroFont";
  src: url("../fonts/PedroFont.ttf") format("truetype");
  font-display: swap;
}

/* Pedro linkini özel fontla yaz */
.pedro-home {
  font-family: "PedroFont", system-ui, -apple-system, "Segoe UI", Roboto, Arial, sans-serif;
  font-weight: 700;
  font-size: 24px;
  text-decoration: none;
}
.pedro-home:hover {
  text-decoration: underline;
}
