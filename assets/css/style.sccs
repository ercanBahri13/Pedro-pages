@font-face {
  font-family: "YourFontName";
  src: url("../fonts/YourFont.woff2") format("woff2");
  font-display: swap;
}

@import "{{ site.theme }}";

/* 1) Pedro linki için özel stil */
.pedro-home {
  font-family: "YourFontName", system-ui, -apple-system, "Segoe UI", Roboto, Arial, sans-serif;
